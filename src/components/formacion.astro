---
const formacion = [
    {
        fecha: "2024",
        puesto: "Curso de React y TypeScript",
        empresa: "Udemy",
        descripcion: ["Hooks y State hasta TypeScript, Zod, Zustand, React Query, Next.js, React Router, MERN y PERN"],
    },
    {
        fecha: "2022",
        puesto: "Curso de Vue js - Fernando Herrera",
        empresa: "Udemy",
        descripcion: ["Pinia, unit test, composition api, autenticación, composables, deployment, file structure, lazy load, vitest y más"],
    },
    {
        fecha: "2016 - 2019",
        puesto: "Ciclo formativo de grado Superior",
        empresa: "Linkia FP - Barcelona",
        descripcion: ["Desarrollo de aplicaciones web"],
    },
    {
        fecha: "2008 - 2010",
        puesto: "Ciclo formativo de grado Superior",
        empresa: "Escola del Treball - Barcelona",
        descripcion: ["Desarrollo de proyectos urbanísticos y operaciones topográficas"],
    },
    {
        fecha: "2003 - 2006",
        puesto: "Técnico de sonido especializado",
        empresa: "Microfusa - Barcelona",
        descripcion: ["Especializado en estudio de grabación, directos y música avanzada"],
    },
];
---

<article class="p-6 my-6 bg-indigo-100 dark:bg-indigo-950 rounded-md" id="formacion">
    <h3 class="text-2xl mb-6 text-indigo-700 font-bold">Formación</h3>
    <div class="formacion-list flex flex-col gap-4">
        {formacion.map((item, index) => (
            <div key={index} class="formacion-card bg-indigo-200 dark:bg-indigo-900 p-4 rounded-md shadow-md flex flex-col md:flex-row gap-4">
                <div class="md:min-w-[27%]">
                    <time dateTime={item.fecha} class="font-semibold">{item.fecha}</time>
                </div>
                <div>
                    <h4 class="uppercase text-indigo-500 font-bold">{item.puesto}</h4>
                    <h5 class="text-indigo-600">{item.empresa}</h5>
                    {item.descripcion?.length > 0 && (
                        <ul role="list" class="list-disc pl-5 mt-2">
                            {item.descripcion.map((desc, i) => (
                                <li key={i}>{desc}</li>
                            ))}
                        </ul>
                    )}
                </div>
            </div>
        ))}
    </div>
</article>

<style is:inline>
    #conocimientos svg {
        width: 25px;
        height: 100%;
    }
    #conocimientos .card {
        min-height: 60px;
    }
    #conocimientos .grid-conocimientos {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(130px, 1fr));
        gap: 1rem;
    }
</style>
