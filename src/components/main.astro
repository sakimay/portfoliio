---
import { Picture } from 'astro:assets';
import myImage from "../assets/isaac_avatar.webp";
import Social from "./social.astro";
import GithubIcon from "../icons/github.astro";
import LinkedinIcon from "../icons/linkedin.astro";

let initial_year = 2020;
let current_year = new Date().getFullYear();
let total_years = current_year - initial_year;

---
<section class="flex flex-col justify-center md:flex-row items-center py-10 min-h-[70vh]" id="inicio">
    <div>
        <Picture src={myImage} formats={['webp','jpg','png']} alt="saki avatar" width={180} height={180} class='rounded-full'/>
    </div>
    <div class="flex flex-col justify-center pt-6 md:pl-6">
        <h1 class="text-4xl text-center md:text-left text-indigo-700 dark:text-zinc-200" >Isaac Mayné</h1>
        <h2 class="text-xl font-thin text-center md:text-left dark:text-indigo-500">Desarrollador Fullstack</h2>
        <p class="dark:text-zinc-200 text-center md:text-left">Técnico superior en desarrollo de aplicaciones web, con más de {total_years} años de experiencia.</p>
        <div class="mt-4 flex items-center justify-center md:justify-start">
            <Social platform="github" username="sakimay" className="mr-2">
                <GithubIcon className="dark:fill-indigo-300 fill-indigo-400"/>
            </Social>
            <Social platform="linkedin" username="in/isaac-mayne-perez">
                <LinkedinIcon className="dark:fill-indigo-300 fill-indigo-400"/>
            </Social>
        </div>
        <div class="mt-4">
            <button class="mt-4 text-white bg-indigo-500 inline-flex items-center gap-2 rounded-full px-10 py-2.5 font-semibold shadow-sm hover:shadow-md focus:outline-none">Contactar</button>
        </div>
    </div>
</section>


