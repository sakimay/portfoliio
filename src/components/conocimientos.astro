---
const components = await Astro.glob(
    "../components/icons/knowledge_icons/*.astro",
);
---

<article
    class="p-6 my-6 bg-indigo-100 dark:bg-indigo-950 rounded-md"
    id="conocimientos"
>
    <h3 class="text-2xl mb-4">Conocimientos</h3>
    <div class="flex flex-wrap justify-start items-center">
        {
            components.map((component) => (
                <div
                    class={`card flex-col flex-1 justify-center items-center m-4 ${component.default.name.includes("_dark") ? "hidden dark:flex" : component.default.name.includes("_light") ? "flex dark:hidden" : "flex"}`}
                >
                    <component.default />
                    <p class="text-sm">
                        {component.default.name.split("_")[0]}
                    </p>
                </div>
            ))
        }
    </div>
</article>
<style is:inline>
    #conocimientos svg {
        width: 25px;
        height: auto;
    }
</style>
