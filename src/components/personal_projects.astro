---
import { Image } from 'astro:assets';
import myImage from "../assets/rock_runners_image.png";

---

<section class="py-6 my-6">
    <h3 class="text-2xl mb-6 text-indigo-700 font-bold">Proyectos personales</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">

        <a href="https://www.rockrunners.es" class="bg-indigo-100 rounded-md shadow-md flex flex-col relative">
            <div class="image">
                <Image src={myImage} alt="rock runners image" class='rounded-t-lg w-full h-auto'/>
            </div>
            <div class="p-4 flex flex-col text-black">    
                <h4 class="font-bold text-indigo-600 text-xl">Rock Runners</h4>
            </div>
        </a>

    </div>
</section>